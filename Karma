-- Библиотека функций для читов
local CheatLib = {}

function CheatLib.SetWalkSpeed(speed)
    local player = game.Players.LocalPlayer
    if player.Character and player.Character:FindFirstChild("Humanoid") then
        player.Character.Humanoid.WalkSpeed = speed
    end
end

function CheatLib.InfiniteAmmo()
    local player = game.Players.LocalPlayer
    -- Точный путь к патронам зависит от игры, тут пример
    if player.Backpack:FindFirstChild("Gun") then
        local gun = player.Backpack.Gun
        gun.Ammo.Value = math.huge
    end
end

function CheatLib.ShowPlayers()
    for _, plr in pairs(game.Players:GetPlayers()) do
        if plr ~= game.Players.LocalPlayer and plr.Character and plr.Character:FindFirstChild("HumanoidRootPart") then
            -- Добавить ESP или выделение
            local highlight = Instance.new("Highlight", plr.Character)
            highlight.FillColor = Color3.new(1,0,0)
            highlight.OutlineColor = Color3.new(1,1,1)
        end
    end
end

-- Ваш основной скрипт читов
local function Main()
    CheatLib.SetWalkSpeed(50)       -- Увеличиваем скорость
    CheatLib.InfiniteAmmo()         -- Бесконечные патроны
    CheatLib.ShowPlayers()          -- Подсветка игроков
    print("Cheat Loaded")
end

Main()
