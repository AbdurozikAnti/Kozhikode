-- Интерфейс с использованием Roblox GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "MM2CheatHub"
ScreenGui.Parent = game:GetService("CoreGui")

local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(0, 300, 0, 400)
Frame.Position = UDim2.new(0, 10, 0, 10)
Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Frame.Parent = ScreenGui

local UIGridLayout = Instance.new("UIGridLayout")
UIGridLayout.CellSize = UDim2.new(1, -10, 0, 40)
UIGridLayout.CellPadding = UDim2.new(0, 5, 0, 5)
UIGridLayout.Parent = Frame

local function createToggleButton(name, callback)
    local btn = Instance.new("TextButton")
    btn.Text = name
    btn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.AutoButtonColor = true
    btn.MouseButton1Click:Connect(callback)
    btn.Parent = Frame
    return btn
end

-- Функции чита
local ESPEnabled = false
local AutoFarmEnabled = false

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

-- Простая подсветка игроков (ESP)
local function toggleESP()
    ESPEnabled = not ESPEnabled
    if ESPEnabled then
        for _, player in pairs(Players:GetPlayers()) do
            if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
                local box = Instance.new("BoxHandleAdornment")
                box.Name = "ESPGuiBox"
                box.Adornee = player.Character.HumanoidRootPart
                box.Size = Vector3.new(4, 6, 4)
                box.Color3 = Color3.new(1, 0, 0)
                box.AlwaysOnTop = true
                box.Parent = player.Character.HumanoidRootPart
            end
        end
    else
        for _, player in pairs(Players:GetPlayers()) do
            if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
                local adornment = player.Character.HumanoidRootPart:FindFirstChild("ESPGuiBox")
                if adornment then adornment:Destroy() end
            end
        end
    end
end

-- Автофарм простой пример (собирать мячики рядом)
local function autofarm()
    while AutoFarmEnabled do
        local workspace = game:GetService("Workspace")
        for _, item in pairs(workspace:GetChildren()) do
            if item.Name == "Coin" or item.Name == "Candy" then
                local plr = Players.LocalPlayer
                if plr and plr.Character and plr.Character:FindFirstChild("HumanoidRootPart") then
                    plr.Character.HumanoidRootPart.CFrame = item.CFrame
                end
                wait(0.1)
            end
        end
        wait(1)
    end
end

local function toggleAutoFarm()
    AutoFarmEnabled = not AutoFarmEnabled
    if AutoFarmEnabled then
        spawn(autofarm)
    end
end

-- Добавляем кнопки для управления функциями
createToggleButton("Toggle ESP", toggleESP)
createToggleButton("Toggle AutoFarm", toggleAutoFarm)
