-- –ê–≤—Ç–æ—Ä: –ù–∞ –æ—Å–Ω–æ–≤–µ –∞–Ω–∞–ª–∏–∑–∞ –∞–∫—Ç—É–∞–ª—å–Ω—ã—Ö –∏—Å—Ç–æ—á–Ω–∏–∫–æ–≤

-- –ó–∞–≥—Ä—É–∑–∫–∞ –±–∏–±–ª–∏–æ—Ç–µ–∫–∏ –¥–ª—è –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- –°–æ–∑–¥–∞–Ω–∏–µ –æ–∫–Ω–∞
local Window = Rayfield:CreateWindow({
    Name = "–£–Ω–∏–∫–∞–ª—å–Ω—ã–π MM2 –ß–∏—Ç | 2025",
    LoadingTitle = "–ó–∞–≥—Ä—É–∑–∫–∞...",
    LoadingSubtitle = "–£–Ω–∏–∫–∞–ª—å–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏ –∞–∫—Ç–∏–≤–∏—Ä—É—é—Ç—Å—è",
    ConfigurationSaving = { Enabled = true },
    KeySystem = false
})

-- –û—Å–Ω–æ–≤–Ω–∞—è –≤–∫–ª–∞–¥–∫–∞
local MainTab = Window:CreateTab("–ì–ª–∞–≤–Ω–∞—è", 1234567890) -- –£–∫–∞–∂–∏—Ç–µ ID –∏–∫–æ–Ω–∫–∏

-- –°–µ–∫—Ü–∏—è –≤–∏–∑—É–∞–ª—å–Ω—ã—Ö —Ñ—É–Ω–∫—Ü–∏–π
local VisualSection = MainTab:CreateSection("–í–∏–∑—É–∞–ª—å–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏")

local ESPToggle = MainTab:CreateToggle({
    Name = "üì° ESP –∏–≥—Ä–æ–∫–æ–≤ (—Å–∫–≤–æ–∑—å —Å—Ç–µ–Ω—ã)",
    CurrentValue = false,
    Callback = function(Value)
        if Value then
            -- –ê–∫—Ç–∏–≤–∞—Ü–∏—è ESP –Ω–∞ –æ—Å–Ω–æ–≤–µ –∏–≥—Ä–æ–≤—ã—Ö —Ç–µ–≥–æ–≤[citation:3]
            for _, player in pairs(game.Players:GetPlayers()) do
                if player ~= game.Players.LocalPlayer then
                    -- –ó–¥–µ—Å—å –±—É–¥–µ—Ç –∫–æ–¥ —Å–æ–∑–¥–∞–Ω–∏—è –º–µ—Ç–æ–∫ (Highlight) –∏ BillboardGui
                    -- –û–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ —Ä–æ–ª–∏ —á–µ—Ä–µ–∑ —Ç–µ–≥ "Murderer", "Sheriff" –∏–ª–∏ "Innocent"[citation:3]
                end
            end
            Rayfield:Notify({Title = "ESP –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω", Content = "–í–∏–¥–∏—Ç–µ –∏–≥—Ä–æ–∫–æ–≤ —á–µ—Ä–µ–∑ —Å—Ç–µ–Ω—ã", Duration = 3})
        else
            -- –£–¥–∞–ª–µ–Ω–∏–µ –≤—Å–µ—Ö ESP-–æ–±—ä–µ–∫—Ç–æ–≤
            Rayfield:Notify({Title = "ESP –¥–µ–∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω", Duration = 2})
        end
    end,
})

-- –°–µ–∫—Ü–∏—è –∞–≤—Ç–æ–º–∞—Ç–∏–∑–∞—Ü–∏–∏
local AutoSection = MainTab:CreateSection("–ê–≤—Ç–æ–º–∞—Ç–∏–∑–∞—Ü–∏—è")

local AutoFarmToggle = MainTab:CreateToggle({
    Name = "üí∞ –ê–≤—Ç–æ-—Ñ–µ—Ä–º–∞ –º–æ–Ω–µ—Ç/—à–∞—Ä–æ–≤",
    CurrentValue = false,
    Callback = function(Value)
        if Value then
            -- –ó–∞–ø—É—Å–∫ —Ü–∏–∫–ª–∞ –∞–≤—Ç–æ—Ñ–∞—Ä–º–∞[citation:1][citation:4]
            Rayfield:Notify({Title = "–ê–≤—Ç–æ-—Ñ–µ—Ä–º–∞ –∑–∞–ø—É—â–µ–Ω–∞", Content = "–°–æ–±–∏—Ä–∞–µ–º —Ä–µ—Å—É—Ä—Å—ã...", Duration = 3})
        else
            Rayfield:Notify({Title = "–ê–≤—Ç–æ-—Ñ–µ—Ä–º–∞ –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∞", Duration = 2})
        end
    end,
})

local GrabGunButton = MainTab:CreateButton({
    Name = "üî´ –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –≤–∑—è—Ç—å –ø—É—à–∫—É",
    Callback = function()
        -- –ü–æ–∏—Å–∫ –æ–±—ä–µ–∫—Ç–∞ "GunDrop" –≤ —Ä–∞–±–æ—á–µ–º –º–µ—Å—Ç–µ –∏ —Ç–µ–ª–µ–ø–æ—Ä—Ç–∞—Ü–∏—è –∫ –Ω–µ–º—É[citation:3]
        local GunDrop = workspace:FindFirstChild("GunDrop")
        if GunDrop then
            game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = GunDrop.CFrame
            Rayfield:Notify({Title = "–ü—É—à–∫–∞ –Ω–∞–π–¥–µ–Ω–∞!", Duration = 3})
        else
            Rayfield:Notify({Title = "–ü—É—à–∫–∞ –Ω–µ –Ω–∞–π–¥–µ–Ω–∞ –Ω–∞ –∫–∞—Ä—Ç–µ", Duration = 3})
        end
    end
})

-- –°–µ–∫—Ü–∏—è –±–æ–µ–≤—ã—Ö —Ñ—É–Ω–∫—Ü–∏–π
local CombatSection = MainTab:CreateSection("–ë–æ–µ–≤—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏")

local KillAllButton = MainTab:CreateButton({
    Name = "üíÄ Kill All (—É–±–∏—Ç—å –≤—Å–µ—Ö)",
    Callback = function()
        -- –õ–æ–≥–∏–∫–∞ –¥–ª—è –∞—Ç–∞–∫–∏ –≤—Å–µ—Ö –∏–≥—Ä–æ–∫–æ–≤[citation:6]
        Rayfield:Notify({Title = "Kill All –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω", Content = "–ê—Ç–∞–∫—É–µ–º –≤—Å–µ—Ö –∏–≥—Ä–æ–∫–æ–≤...", Duration = 3})
    end
})

-- –ê–Ω—Ç–∏-–ê–§–ö —Å–∏—Å—Ç–µ–º–∞[citation:1]
local VirtualUser = game:GetService("VirtualUser")
game.Players.LocalPlayer.Idled:connect(function()
    VirtualUser:CaptureController()
    VirtualUser:ClickButton2(Vector2.new())
end)

Rayfield:Notify({
    Title = "–ß–∏—Ç –∑–∞–≥—Ä—É–∂–µ–Ω!",
    Content = "–£–Ω–∏–∫–∞–ª—å–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏ –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω—ã.",
    Duration = 6,
})
